@{
    ViewData["title"] = "Error 404 ";
    Layout = "_layout";
}

<style>
    .container {
        padding: 40px 0 50px;
    }

    .swiper-container1 {
        display: none;
    }

    .myNav {
        padding: 15px;
        position: sticky;
        background: black;
    }

    .error-content {
        position: relative;
        justify-content: center;
        align-items: center;
        text-align: center;
        letter-spacing: 2px;
    }

        .error-content span {
            position: relative;
            display: inline-block;
            font-size: 230px;
            margin: 0;
            font-weight: 900;
            background: url(../img/error.png) no-repeat;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-size: cover;
            background-position: center;
            filter: drop-shadow(2px 2px 2px black);
        }

            .error-content span:nth-child(1) {
                
                animation: dance 2s ease infinite;
            }

            .error-content span:nth-child(2) {
                
                animation: dance 2.5s ease infinite;
            }

            .error-content span:nth-child(3) {
               
                animation: dance 3s ease infinite;
            }

        
            
</style>
<div class="container">
    <div class="error-content">
        <div class="error-title">
            <span> 4 </span>
            <span> 0 </span>
            <span> 4 </span>
        </div>
       
        <h2> Page Not Found </h2>
        <h4 style="padding-bottom:20px;">
            Oops,The page you are looking for might have been removed had its name changed or is temporarily unavailable.
        </h4>
        <a href="../Home/Index" class="myBtn"> Home Page <i class="bi bi-house"></i> </a>
    </div>
</div>
