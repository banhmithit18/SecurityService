@{
    ViewData["Title"] = "Home Page";
}
<style>
    .module {
        margin: 10px 0 10px;
        width: 100%;
        height: 50vh;
        background: url("../img/service1.jpeg");
        background-size: 100% 100%;
        background-attachment: fixed;
    }

    .module-content {
        position: relative;
        top: 50%;
        transform: translate(0,-50%);
        justify-content: center;
        align-items: center;
    }

    .service-title h1 {
        font-size: 50px;
        letter-spacing: 2px;
        color: white;
        font-weight: 300;
        text-align: center;
        text-transform: uppercase;
        filter: drop-shadow(1px 2px 2px #fff);
    }

    .service-title p {
        font-size: 20px;
        letter-spacing: 2px;
        color: white;
        font-weight: 300;
        text-align: center;
        text-transform: uppercase;
    }

    .module-service {
        background: #f5f5f7;
        width: 100%;
        height: 100vh;
    }

    .module-service-content {
        display: grid;
        grid-gap: 10px;
        padding: 10px;
        grid-template-columns: auto auto;
        height: 100%;
    }

    .service-item {
        position: relative;
        text-align: center;
        font-size: 18px;
        color: #fff;
        width: 100%;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }

        .service-item:nth-child(1) {
            background: url("../img/security.jpeg");
            background-size: 100% 100%;
        }

        .service-item:nth-child(2) {
            background: url("../img/security1.jpeg");
            background-size: 100% 100%;
        }

        .service-item:nth-child(3) {
            background: url("../img/security3.png");
            background-size: 100% 100%;
        }

        .service-item:nth-child(4) {
            background: url("../img/guard1.jpg");
            background-size: 100% 100%;
        }

        .service-item:nth-child(1):hover {
            box-shadow: 3px 5px #888888;
        }

        .service-item:nth-child(2):hover {
            box-shadow: 3px 5px #888888;
        }

        .service-item:nth-child(3):hover {
            box-shadow: 3px 5px #888888;
        }

        .service-item:nth-child(4):hover {
            box-shadow: 3px 5px #888888;
        }

    .swiper-container2 {
        width: 100%;
        margin:50px 0 50px;
        padding-top: 50px;
        padding-bottom: 50px;
        background-color: #f5f5f7;
       
    }

    .swiper-slide2 {
        background-position: center;
        background-size: cover;
        width: 1000px;
        background-color: #fff;
        border-radius: 20px;
        box-shadow:5px 5px 5px #ddd;
    }
        
        .swiper-slide2 img {
            display: block;
            width: 100%;
        }

    .testmonialBox {
        position: relative;
        padding: 40px;
        justify-content: center;
        align-items: center;
        text-align: center;
        
    }

    .image-testmonial {
        position: relative;
        border-radius: 50%;
        background: red;
        width: 100px;
        top: 0;
        left: 50%;
        transform: translate(-50%,0);
        overflow: hidden;
    }

    .bi-chat-quote {
        position: absolute;
        top: 0;
        left: 550px;
        font-size: 70px;
    }
</style>
